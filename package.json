{
  "name": "rainwc",
  "version": "0.1.3",
  "description": "Fine-grained reactive Web Components framework with JSX",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "types": "./vite-plugin-rainwc.d.ts",
      "import": "./vite-plugin-rainwc.js"
    }
  },
  "files": [
    "dist/",
    "vite-plugin-rainwc.js",
    "vite-plugin-rainwc.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "node build.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "lint": "eslint src/**/*.js --fix"
  },
  "keywords": [
    "web-components",
    "reactive",
    "signals",
    "framework",
    "jsx"
  ],
  "jsx": {
    "factory": "jsx",
    "fragment": "Fragment",
    "pragma": "jsx",
    "pragmaFrag": "Fragment"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "jsx",
          "pragmaFrag": "Fragment"
        }
      ]
    ]
  },
  "author": "weatherjean",
  "homepage": "https://github.com/zulubit/rain#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zulubit/rain.git"
  },
  "bugs": {
    "url": "https://github.com/zulubit/rain/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@preact/signals-core": "^1.11.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "happy-dom": "^18.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
